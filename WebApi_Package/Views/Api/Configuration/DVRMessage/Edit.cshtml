@model SVRDatabase.Model.DVRMessage

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DVRMessage</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class ="control-label col-md-2">Message ID</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MessageID)
                @Html.ValidationMessageFor(model => model.MessageID)
            </div>
        </div>

        <div class="form-group">
            <label class ="control-label col-md-2">Message Body</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MessageBody)
                @Html.ValidationMessageFor(model => model.MessageBody)
            </div>
        </div>

        <div class="form-group">
            <label class ="control-label col-md-2">DVR Date</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DvrDate,String.Format("{0:yyyy-MM-dd}", Model.DvrDate.ToShortDateString().IsDateTime() ? Model.DvrDate : DateTime.Today),new { @class = "form-control", type="date"})
                @Html.ValidationMessageFor(model => model.DvrDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
