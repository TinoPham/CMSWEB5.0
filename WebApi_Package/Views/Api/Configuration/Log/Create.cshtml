@model SVRDatabase.Model.Log

@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Log</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.LogID, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.LogID)
                @Html.ValidationMessageFor(model => model.LogID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Message)
                @Html.ValidationMessageFor(model => model.Message)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Program Set</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.ProgramSet)
                @Html.ValidationMessageFor(model => model.ProgramSet)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">DVR Date</label>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.DVRDate,String.Format("{0:yyyy-MM-dd}", DateTime.Today),new { @class = "form-control", type="date"})
                @Html.ValidationMessageFor(model => model.DVRDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
